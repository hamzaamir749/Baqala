<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    app:ignore="NamespaceTypo">

    <include
        android:id="@+id/toolbar_steps"
        layout="@layout/toolbar_steps" />


    <RelativeLayout
        android:id="@+id/relativeLayout_step0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_steps"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:backgroundTint="@color/colorgry"
                app1:cardCornerRadius="12dp">

                <Spinner
                    android:id="@+id/checkin_step0_client_name_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:padding="8dp"></Spinner>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:backgroundTint="@color/colorgry"
                app1:cardCornerRadius="12dp">

                <Spinner
                    android:id="@+id/checkin_step0_catogories_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:padding="8dp"></Spinner>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/next_btn_s0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@color/colorgreen"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorgreen"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:gravity="center"
                    android:text="@string/next"

                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/todo"

                    android:src="@drawable/arrow" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_steps"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/next_s1btn"
            android:orientation="vertical"
            android:padding="@dimen/pdlg_space_1.0x">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="@string/steps"
                android:textColor="@color/colorblue"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/colorWhite"
                android:padding="5dp"
                android:src="@drawable/s1"
                app:ignore="ContentDescription" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="@string/add_before_pictures"
                        android:textColor="@color/colorblue"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/pdlg_space_1.0x">

                        <ImageView
                            android:id="@+id/addbefore_product_img1"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus"
                            app:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/addbefore_product_img2"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus"
                            app:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/addbefore_product_img3"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus"
                            app:ignore="ContentDescription" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/pdlg_space_1.0x">

                        <ImageView
                            android:id="@+id/addbefore_product_img4"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/plus" />

                        <ImageView
                            android:id="@+id/addbefore_product_img5"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus"
                            app:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/addbefore_product_img6"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus"
                            app:ignore="ContentDescription" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/pdlg_space_1.0x">

                        <ImageView
                            android:id="@+id/addbefore_product_img7"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus"
                            app:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/addbefore_product_img8"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />

                        <ImageView
                            android:id="@+id/addbefore_product_img9"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:contentDescription="TODO"
                            android:src="@drawable/plus" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/pdlg_space_1.0x">

                        <ImageView
                            android:id="@+id/addbefore_product_img10"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />

                        <ImageView
                            android:id="@+id/addbefore_product_img11"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/next_s1btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@color/colorgreen"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorgreen"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvtuqa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:gravity="center"
                    android:text="@string/next"

                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/arrow" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_steps"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/next_s2btn"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/steps"
                android:textColor="@color/colorblue"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/colorWhite"
                android:padding="5dp"
                android:src="@drawable/s2"
                app:ignore="ContentDescription" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/add_after_pictures"
                        android:textColor="@color/colorblue"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add_afterproduct_img1"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />

                        <ImageView
                            android:id="@+id/add_afterproduct_img2"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />

                        <ImageView
                            android:id="@+id/add_afterproduct_img3"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add_afterproduct_img4"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />

                        <ImageView
                            android:id="@+id/add_afterproduct_img5"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />

                        <ImageView
                            android:id="@+id/add_afterproduct_img6"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add_afterproduct_img7"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />

                        <ImageView
                            android:id="@+id/add_afterproduct_img8"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />

                        <ImageView
                            android:id="@+id/add_afterproduct_img9"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add_afterproduct_img10"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />

                        <ImageView
                            android:id="@+id/add_afterproduct_img11"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/plus" />


                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/next_s2btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@color/colorgreen"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorgreen"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvnext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:gravity="center"
                    android:text="@string/next"

                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/arrow" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_steps"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/steps"
                android:textColor="@color/colorblue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="5dp"
                android:src="@drawable/s3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <SearchView
                    android:id="@+id/searchdoctor_SearchBox"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/search_background"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    app:iconifiedByDefault="false"
                    app:queryHint="Search Products..."></SearchView>

                <ImageView
                    android:id="@+id/search_image_btn"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/barcode_shape"
                    android:src="@drawable/barcode_camera"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/addproduct_s3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/shape_text_checkout"
                    android:padding="10dp"
                    android:text="@string/add"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/simpleGridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbarSize="5dp"
                    android:scrollbarThumbVertical="@android:color/holo_green_light"
                    android:scrollbars="vertical" />


            </LinearLayout>


        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addproduct_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/next_s3btn"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"
            android:layout_margin="15dp"
            android:backgroundTint="#3AB621"
            android:src="@drawable/fab_button"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/next_s3btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@color/colorgreen"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorgreen"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvnexts3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/arrow" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl3a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_steps"
        android:visibility="gone"

        >

        <include
            android:id="@+id/addstore_steps_toolbar"
            layout="@layout/toolbar_all" />

        <ScrollView
            android:id="@+id/scrollView_steps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/addstore_steps_toolbar">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <EditText
                        android:id="@+id/checkin_product_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/edittextshape"
                        android:hint="@string/required_field"
                        android:padding="12dp"
                        android:textColorHint="@color/colorblue" />

                    <ImageView
                        android:id="@+id/barcode_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:src="@drawable/cameraicon"
                        android:visibility="gone" />


                </LinearLayout>


                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/product_name_barcode"
                    android:textColor="@color/colordarkblue"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/checkin_product_name_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                    </com.jaredrummler.materialspinner.MaterialSpinner>

                    <ImageView
                        android:id="@+id/barcode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/barcode_shape"
                        android:src="@drawable/barcode_camera"
                        android:visibility="gone" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/client_name"
                    android:textColor="@color/colordarkblue"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/checkin_client_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/edittextshape"
                    android:hint="@string/required_field"
                    android:padding="12dp"
                    android:textColorHint="@color/colorblue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/product_available_on_shelf"
                    android:textColor="@color/colordarkblue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgb_availableshelf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/availableshelf_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/yes"
                        android:textColor="@color/colorblue" />

                    <RadioButton
                        android:id="@+id/availableshelf_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/no"
                        android:textColor="@color/colorblue" />

                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/near_expiry"
                    android:textColor="@color/colordarkblue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgb_nearexpiary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/nearexpiry_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/yes"
                        android:textColor="@color/colorblue" />

                    <RadioButton
                        android:id="@+id/nearexpiry_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/no"
                        android:textColor="@color/colorblue" />

                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/stock_count"
                    android:textColor="@color/colordarkblue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgb_stockcount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_outofstock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/out_of_stock"
                        android:textColor="@color/colorblue" />

                    <RadioButton
                        android:id="@+id/rb_overstock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/over_stock"
                        android:textColor="@color/colorblue" />

                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/shelf_space"
                    android:textColor="@color/colordarkblue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgb_shelfspace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/shelfspace_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/yes"
                        android:textColor="@color/colorblue" />

                    <RadioButton
                        android:id="@+id/shelfspace_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/no"
                        android:textColor="@color/colorblue" />

                </RadioGroup>


                <Button
                    android:id="@+id/checkin_product_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="25dp"
                    android:background="@drawable/oncancelshape"
                    android:gravity="center"
                    android:text="@string/add"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>


        </ScrollView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_steps"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/lnv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/steps"
                android:textColor="@color/colorblue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/colorWhite"
                android:padding="2dp"
                android:src="@drawable/s4"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/clients_comments"
                android:textColor="@color/colorblue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/client_comments"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:background="@drawable/clientcomments"
                android:hint="@string/comments"
                android:textAlignment="center" />

            <RatingBar
                android:id="@+id/client_Rating"
                style="@style/Widget.AppCompat.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:progressBackgroundTint="@color/colorgry"
                android:progressTint="@color/colorgreen"
                android:rating="3.5" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/next_s4btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorgreen"
                android:gravity="center"
                android:text="@string/next"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />


            <Button
                android:id="@+id/skipbtn_s4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorblue"
                android:text="@string/skip"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_steps"
        android:visibility="gone">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/layout_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="@string/steps"
                    android:textColor="@color/colorblue"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:src="@drawable/s5"


                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="@string/competitor_data"
                    android:textColor="@color/colorblue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/comptitiors_data"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="30dp"
                    android:background="@drawable/whiteshape"
                    android:hint="@string/comments"
                    android:textAlignment="center" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/add_images"
                    android:textAlignment="center"
                    android:textColor="@color/colorblue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/pdlg_space_1.0x">

                    <ImageView
                        android:id="@+id/s5_img1"
                        android:layout_width="60sp"
                        android:layout_height="45sp"
                        android:layout_margin="8dp"
                        android:src="@drawable/plus" />

                    <ImageView
                        android:id="@+id/s5_img2"
                        android:layout_width="60sp"
                        android:layout_height="45sp"
                        android:layout_margin="8dp"
                        android:src="@drawable/plus" />

                    <ImageView
                        android:id="@+id/s5_img3"
                        android:layout_width="60sp"
                        android:layout_height="45sp"
                        android:layout_margin="8dp"
                        android:src="@drawable/plus" />


                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layout_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="@dimen/pdlg_space_1.0x"
            android:weightSum="3">


            <Button
                android:id="@+id/btn_next5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/colorgreen"
                android:gravity="center"
                android:text="@string/submit"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <Button
                android:id="@+id/skipbtn_s5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorblue"

                android:text="@string/skip"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/add_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/pdlg_color_green"

                android:text="Add More"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>