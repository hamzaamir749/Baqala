<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorgreen"
    android:backgroundTint="@color/colorgreen"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:text="SELECT A REASON TO CANCEL TASK !"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold" />
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <RadioButton
                android:checked="true"
                android:id="@+id/reason1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Close On Arrival"
                android:textColor="@color/colorWhite" />

            <RadioButton
                android:id="@+id/reason2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Traffic Issue"
                android:textColor="@color/colorWhite" />

            <RadioButton
                android:id="@+id/reason3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Vehicle Malfunction"
                android:textColor="@color/colorWhite" />

            <RadioButton
                android:id="@+id/reason4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Client Refusal"
                android:textColor="@color/colorWhite" />

            <RadioButton
                android:id="@+id/reason5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Client Changes"
                android:textColor="@color/colorWhite" />


</RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:text="Add Image"
            android:textColor="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/upload_img1_oncancel"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:src="@drawable/oncancelpic" />

            <ImageView
                android:id="@+id/upload_img2_oncancel"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:src="@drawable/oncancelpic" />

            <ImageView
                android:id="@+id/upload_img3_oncancel"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:src="@drawable/oncancelpic" />


        </LinearLayout>
        <Button
            android:id="@+id/oncancel_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center"
            android:textColor="@color/colorblue"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:padding="12dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/whiteshape"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>