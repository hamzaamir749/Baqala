<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreInfoActivity">

    <include
        android:id="@+id/storeinfo_Toolbar"
        layout="@layout/toolbar_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </include>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/storeinfo_Toolbar"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:padding="20dp"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store Name"
            android:textColor="@color/colordarkblue"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:id="@+id/tvstorename"


            />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvstorename"
                android:background="@drawable/cardview"
                android:padding="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Habib Mart"
                android:id="@+id/store_name_view"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Client Name"
                android:textColor="@color/colordarkblue"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                android:id="@+id/tvclientname"
                android:layout_below="@id/store_name_view"


                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvclientname"
                android:background="@drawable/cardview"
                android:padding="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Abdullah"
                android:id="@+id/client_name_view"

                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number"
                android:textColor="@color/colordarkblue"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                android:id="@+id/tvnumber"
                android:layout_below="@id/client_name_view"


                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvnumber"
                android:background="@drawable/cardview"
                android:padding="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:hint="12345"

                android:id="@+id/number_view"

                />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/colordarkblue"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                android:id="@+id/tvadress"
                android:layout_below="@id/number_view"


                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvadress"
                android:background="@drawable/cardview"
                android:padding="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Adress"


                android:id="@+id/address_view"

                />























        </RelativeLayout>


    </ScrollView>






</RelativeLayout>